{
  "name": "dialog-craft",
  "version": "1.0.0",
  "description": "Редактор диалоговых систем для геймдизайнеров",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run start:renderer\" \"npm run start:main\"",
    "start:main": "tsc -p src/main && wait-on http://localhost:3000 && electron .",
    "start:renderer": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build && tsc -p src/main",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test:services": "ts-node src/tests/services-test.ts"
  },
  "browser": "src/renderer/index.tsx",
  "build": {
    "appId": "com.example.dialogcraft",
    "productName": "Dialog Craft",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cytoscape": "^3.26.0",
    "cytoscape-dagre": "^2.5.0",
    "dagre": "^0.8.5",
    "electron": "^26.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "js-yaml": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/cytoscape": "^3.19.10",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.15.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/scheduler": "^0.23.0",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.6.3",
    "eslint": "^8.40.0",
    "eslint-plugin-react": "^7.32.2",
    "npm-run-all": "^4.1.5",
    "react-scripts": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
