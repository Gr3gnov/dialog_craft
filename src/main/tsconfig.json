{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["dom", "es2020"],
    "sourceMap": true,
    "outDir": "../../dist/main",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,  // Добавлено для пропуска проверки библиотек
    "baseUrl": "../",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["../renderer/**/*", "../node_modules/**/*"]  // Исключаем renderer, чтобы избежать конфликтов типов
}
