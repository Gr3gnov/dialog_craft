// src/main/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2020"
    ],
    "sourceMap": true,
    "outDir": "../../dist/main",
    "rootDir": "../", // Изменено с "./" на "../" чтобы включить src директорию
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "../",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "../**/*"
  ], // Изменено для включения всех файлов из src
  "exclude": [
    "../renderer/**/*",
    "../node_modules/**/*"
  ]
}
